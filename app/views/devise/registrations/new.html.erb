<div class="user-registration">
  <h2 class="title">Register</h2>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "user-registration-form" }) do |f| %>
    <%= f.error_notification %>
    <ul>
      <% resource.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>

    <div class="form-inputs">
      <%= f.input :first_name, as: :fake %>
      <%= f.input :last_name, as: :fake %>
      <%= f.input :name, as: :hidden %>
      <%= f.input :email %>
      <%= f.input :avatar %>
      <%= f.input :password, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
      <%= f.input :password_confirmation %>
      <%= f.simple_fields_for :workplaces do |workplace| %>
        <%= render 'workplace_fields', f: workplace %>
      <% end %>
      <div>
        <%= link_to_add_association 'add workplace', f, :workplaces %>
      </div>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Sign up" %>
    </div>
  <% end %>
</div>
