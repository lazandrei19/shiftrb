<div class="project">
  <div class="info">
    <div class="logo">
      <%= image_tag @project.logo.url(:medium), :class => "logo-image" %>
    </div>
    <div class="name"><%= @project.name %></div>
    <div class="headline"><%= @project.headline %></div>
  </div>
  <div class="description"><%= @project.description %></div>
  <div class="members">
    <% @project.members.each do |member| %>
      <%= member.user.name %>
      <br>
    <% end %>
  </div>
  <div class="image-carousel">
    <% @project.images.each do |image| %>
      <div class="carousel-image-contaier">
        <%= image_tag image.image.url(:original), :class => "carousel-image" %>
      </div>
    <% end %>
  </div>
  <%= simple_form_for [@project, Feedback.new] do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :content, label: "Give feedback" %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Submit" %>
    </div>
  <% end %>
</div>